<?xml version="1.0" encoding="utf-8"?>
<com.emmanuelmess.simpleaccounting.activities.views.LedgerRow
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/mainactivity_margin"
    android:layout_marginEnd="@dimen/mainactivity_margin"
    android:baselineAligned="false"
    android:weightSum="10">

    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textDate"
        android:layout_column="0"
        android:gravity="start|center_vertical"
        android:visibility="gone"
        android:layout_weight="1"
        android:ems="2"
        android:maxLines="1"
        android:textSize="@dimen/normal"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textRef"
        android:layout_column="1"
        android:gravity="center"
        android:visibility="gone"
        android:layout_weight="3"
        android:ems="4"
        android:maxLines="1"
        android:textSize="@dimen/normal"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textCredit"
        android:layout_column="2"
        android:gravity="center"
        android:visibility="gone"
        android:layout_weight="2"
        android:ems="3"
        android:maxLines="1"
        android:textSize="@dimen/normal"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textDebit"
        android:layout_column="3"
        android:gravity="center"
        android:visibility="gone"
        android:layout_weight="2"
        android:ems="3"
        android:maxLines="1"
        android:textSize="@dimen/normal"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textBalance"
        android:layout_column="4"
        android:maxLines="1"
        android:layout_weight="2"
        android:gravity="center_vertical|end"
        android:ems="3"
        android:textSize="@dimen/normal"/>
</com.emmanuelmess.simpleaccounting.activities.views.LedgerRow>